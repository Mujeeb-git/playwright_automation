{
    "default": {
        "dryRun": false,
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "paths": [
            "./e2e/tests/features/*.feature"
        ],
        "require": [
            "./e2e/tests/stepdefinitions/*.js",
            "./e2e/corelib/corelib.js"
        ],
        "format": [
            ["json", "reports/cucumber_report.json" ],
            ["junit","reports/junit.xml"],
            ["html","reports/html-formatter.html"]
        ]
    }
}